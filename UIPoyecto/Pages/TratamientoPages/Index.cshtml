@page
@model IndexModel
@{
    ViewData["Title"] = "Tratamiento";
    <link rel="stylesheet" href="~/css/main.css">
}

<div>
    <div class="colum2">
        <div class="box">
            <div class="box">
                <div class="container">
                    <h3 class="datatable-header">Tratamientos</h3>
                    <div class="box scrollable table-medium Center">
                        <table class="datatable" id="tratamientoTd">
                            <thead>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="box">
            <div class="formContainer">
                <div class="dateTask">
                    <div class="date-left">
                        <div id="date-number"></div>
                        <div>
                            <div id="datemonth"></div>
                            <div id="dateyear"></div>
                        </div>
                    </div>
                    <div id="dateday"></div>
                </div>
                <form class="task" onsubmit="addNewTask(event)">
                    <div class="box-detail">
                        <div class="input-box">
                            <input type="text" name="taskTitle" autocomplete="off" placeholder="Nueva Tarea">
                            <button type="submit" class="btn_addTask">+</button>
                        </div>
                    </div>
                </form>
                <div id="tasklist"></div>
            </div>
            <button type="submit" class="Primary-Button" style="width: 100%;">+ Agregar Tratamiento</button>
        </div>
    </div>
</div>

<script src="~/js/changeTheme.js" asp-append-version="true"></script>

<script>
    import CreateDropdown from "../js/ComponentesJs/DropDownComponent.js";
    import GetObjectData from "../js/ComponentesJs/GetDatosByApiUrlComponent.js";
    import CreateTable from "../js/ComponentesJs/TableComponent.js";

    window.onload = async () => {
        await cargarDLTratamiento();
    };

    const cargarDLTratamiento = async () => {
        let tratData = await GetObjectData("../api/Tratamiento/GetTratamientobasico");
        //response = await response.json();
        CreateTable(tratamientoTd, tratData, (item) => { editAlim(item); });
    };

</script>

