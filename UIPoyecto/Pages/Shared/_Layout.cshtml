<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UIPoyecto</title>
    <link rel="stylesheet" href="~/css/main.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
    <section class="main-container">
        <aside>
            <section class="top">
                <div class="logo">
                    <ion-icon name="egg" class="ico"></ion-icon>
                    <h2>Poyecto</h2>
                </div>
                <div class="close" id="btn_Close">
                    <ion-icon name="close-outline"></ion-icon>
                </div>
            </section>

            <section class="sidebar">
                <a href="#">
                    <ion-icon name="stats-chart"></ion-icon>
                    <h3>Dashboard</h3>
                </a>
                <a href="produccion.html" class="active">
                    <ion-icon name="scale"></ion-icon>
                    <h3>Produccion</h3>
                </a>
                <a href="alimentos.html" class="active">
                    <ion-icon name="bag"></ion-icon>
                    <h3>Alimentos</h3>
                </a>
                <a href="#">
                    <ion-icon name="file-tray-stacked"></ion-icon>
                    <h3>Tareas</h3>
                </a>
                <a href="#" id="btn_Usuarios">
                    <ion-icon name="people"></ion-icon>
                    <h3>Usuarios</h3>
                </a>
                <a href="#">
                    <ion-icon name="log-in"></ion-icon>
                    <h3>Salir</h3>
                </a>
            </section>
        </aside>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </section>

    <!--Icon Scripts-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <!--Function Scripts-->
    <script src="taskScript.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
