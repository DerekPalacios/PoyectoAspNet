            <ul class="datalist" id="usuariosDL"></ul>
        </div>

        <div class="box">
            <div class="formContainer">
                <div class="formTitle">Nuevo Cargo</div>
                <form action="#">
                    <div class="box-detail">
                        <div hidden>
                            <input type="number" id="CargoId" />
                        </div>
                        <div class="input-box">
                            <span class="detail">Cargo</span>
                            <input type="text" placeholder="Ingrese el Nombre de la Galera" required>
                        </div>
                    </div>

                    <div class="buttons">
                        <input class="Primary-Button" type="submit" value="Registrar" onclick="openPopup()">
                        <input class="Secondary-Button" type="submit" value="Cancelar">
                    </div>
                </form>
            </div>
            <div class="formContainer">
                <div class="formTitle">Nuevo Usuario</div>
                <form action="#">
                    <div class="box-detail">
                        <div hidden>
                            <input type="number" id="UsuarioId" />
                        </div>
                        <div class="input-box">
                            <span class="detail">Nombre</span>
                            <input type="text" placeholder="Ingrese el Nombre del Usuario" required>
                        </div>
                        <div class="input-box">
                            <span class="detail">Cargo</span>
                            <select class="input" id="alimMarca" required>
                                <option value="0">
                                    Marcas
                                </option>
                            </select>
                        </div>
                        <div class="input-box">
                            <span class="detail">Correo</span>
                            <input type="email" placeholder="Ingrese el Correo" required>
                        </div>
                        <div class="input-box">
                            <span class="detail">Contraseña</span>
                            <input type="password" placeholder="Ingrese la Contraseña" required>
                        </div>
                        <div class="input-box">
                            <span class="detail">Verifique la Contraseña</span>
                            <input type="password" placeholder="Ingrese la Contraseña" required>
                        </div>
                        <div class="input-box">
                            <span class="detail">Numero de Telefono</span>
                            <input type="tel" placeholder="Ingrese el Numero de Telefono" required>
                        </div>
                    </div>

                    <div class="buttons">
                        <input class="Primary-Button" type="submit" value="Registrar" onclick="openPopup()">
                        <input class="Secondary-Button" type="submit" value="Cancelar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

